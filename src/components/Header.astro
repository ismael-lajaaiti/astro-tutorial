---
import { Icon } from "astro-icon/components";
import Social from "./Social.astro";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<style>
    .header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        padding: 1px 20px;
        z-index: 1000;
        display: flex;
        justify-content: space-between;
        align-items: center;
        backdrop-filter: blur(10px);
        background-color: rgba(255, 255, 255, 0.4);
        -webkit-backdrop-filter: blur(10px); /* For Safari support */
        box-shadow: 0 0px 2px rgba(0, 0, 0, 0.1);
    }

    .nav-links {
        display: flex;
        margin-left: 1em;
    }

    .nav-links a {
        display: inline-flex;
        align-items: center;
        padding: 15px 20px;
        text-decoration: none;
        color: black;
        transition: color 0.3s ease;
    }

    .nav-links a:hover,
    .home a:hover {
        color: turquoise;
    }

    .nav-links a.active,
    .home a.active {
        color: darkcyan;
    }

    .home {
        font-weight: 600;
        display: flex;
        align-items: center;
    }

    .nav-icon {
        width: 20px;
        height: 20px;
        margin-right: 5px;
        transition: transform 0.3s ease;
    }

    .home:hover .nav-icon {
        transform: rotate(45deg);
    }
</style>

<header class="header">
    <nav class="nav">
        <div class="nav-links">
            <div class="home">
                <a class={currentPath === "" ? "active" : ""} href="/">
                    <Icon class="nav-icon" name="carbon:hybrid-networking" />
                    IsmaÃ«l Lajaaiti
                </a>
            </div>
            <a
                class={currentPath === "research" ? "active" : ""}
                href="/research"
            >
                Research
            </a>
            <a class={currentPath === "blog" ? "active" : ""} href="/blog">
                Blog
            </a>
        </div>
    </nav>
    <div class="social-icons">
        <Social
            url="https://github.com/ismael-lajaaiti"
            logo="academicons:google-scholar"
            platform="GitHub"
        />
        <Social
            url="https://github.com/ismael-lajaaiti"
            logo="mdi:github"
            platform="GitHub"
        />
        <Social
            url="https://github.com/ismael-lajaaiti"
            logo="ri:twitter-x-fill"
            platform="X"
        />
        <Social url="/files/cv.pdf" logo="tabler:file-cv" platform="CV" />
    </div>
</header>
