---
const { title, image, link } = Astro.props;
---

<a href={link} class="group p-3">
    <img
        src={image}
        alt="Blog Post Image"
        class="w-full rounded-lg shadow-md transition-transform duration-300 group-hover:scale-105"
    />
    <div
        class="sm:text-lg text-xl text-center text-black mt-2 group-hover:underline overflow-hidden"
    >
        {title}
    </div>
</a>
