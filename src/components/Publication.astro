---
const { title, date, journalLink, journalName, preprintLink, authors } =
    Astro.props;
const displayJournal = journalName ? journalName : "In Review";
---

<article class="publication">
    <div class="publication-line">
        <span class="publication-title">{title}</span>
    </div>

    <div class="publication-line">
        <span class="publication-date">{date}</span>
        ·
        {
            journalName ? (
                <a href={journalLink} target="_blank" class="publication-link">
                    {displayJournal}
                </a>
            ) : (
                <span class="publication-status">
                    <em> {displayJournal} </em>
                </span>
            )
        }
        ·
        <a href={preprintLink} target="_blank" class="publication-link"
            >Preprint</a
        >
    </div>

    <div class="publication-line">
        <span class="publication-authors">{authors}</span>
    </div>
</article>

<style>
    .publication {
        background: snow;
        border: 1px solid #e0e0e0;
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 10px;
        padding-bottom: 5px;
        margin-bottom: 10px;
        margin-top: 10px;
        border-radius: 8px;
    }

    .publication-line {
        display: flex;
        align-items: center;
        margin-bottom: 3px;
    }

    .publication-title {
        font-weight: 600;
    }

    .publication-date {
        margin-right: 5px;
    }

    .publication-authors {
        margin-bottom: 5px;
    }

    .publication-link {
        margin-left: 5px;
        margin-right: 5px;
    }

    .publication-status {
        font-style: italic;
        margin-left: 5px;
        margin-right: 5px;
    }
</style>
