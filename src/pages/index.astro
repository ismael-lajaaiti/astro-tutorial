---
import BaseLayout from "../layouts/BaseLayout.astro";
import Publication from "../components/Publication.astro";
const pageTitle = "Ecology, Webs, and Theory";
---

<style>
    .bio-content {
        display: flex; /* Use flexbox for layout */
        align-items: center; /* Center items vertically */
        gap: 30px; /* Space between bio text and photo */
    }

    .bio-text {
        flex: 1; /* Allow the text to take up available space */
        text-align: justify; /* Justify the text within the container */
    }

    .bio-photo img {
        width: 120px; /* Set the width of the photo */
        height: 120px; /* Set the height of the photo */
        border-radius: 50%; /* Make the photo circular */
        object-fit: cover; /* Ensure the image covers the circle */
        border: 3px solid white; /* Optional: Add a border around the photo */
    }

    .full-width-container {
        position: relative;
        width: 100vw; /* Full viewport width */
        height: 0;
        padding-bottom: 56.25%; /* 16:9 aspect ratio (9 / 16 * 100) */
        overflow: hidden;
        margin-left: calc(-50vw + 50%);
        margin-right: calc(-50vw + 50%);
        z-index: -1; /* Ensure it doesn't overlap other content */
    }

    .full-width-image {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover; /* Crop and cover the container */
    }
</style>

<BaseLayout pageTitle={pageTitle}>
    <body>
        <div class="full-width-container">
            <img
                src="/assets/hero.jpg"
                alt="Ernst Haeckel"
                class="full-width-image"
            />
        </div>
        <section class="bio-section">
            <h2>Ismaël Lajaaiti</h2>
            <div class="bio-content">
                <div class="bio-text">
                    <p>
                        I'm a PhD student in theoretical ecology at <a
                            href="https://isem-evolution.fr/"
                            target="_blank">ISEM</a
                        > in Montpellier, France. I explore the simple patterns that
                        emerge from the complexity of ecological systems using mathematical
                        equations and computer simulations. Outside the lab, you’ll
                        likely find me solving problems at the climbing gym.
                    </p>
                </div>
                <div class="bio-photo">
                    <img src="/assets/me.png" alt="Photo of [Your Name]" />
                </div>
            </div>
        </section>

        <h2>Interests</h2>
        <p>
            Stability from Species to Ecosystems · Food Webs · Biotic
            Interactions · Julia Programming Language
        </p>

        <h2>Publications</h2>
        <Publication
            title="How biotic interactions structure species responses to perturbations"
            authors="I. Lajaaiti, S. Kéfi, J-F. Arnoldi"
            journalName="Proceedings of the Royal Society B"
            date="2024"
        />
        <Publication
            title="EcologicalNetworksDynamics.jl: A Julia package to simulate the temporal dynamics of complex ecological networks"
            date="2024"
            authors="I. Lajaaiti, I. Bonnici, S. Kéfi, H. Mayall, A. Danet, A. P. Beckerman, T. Malpas, E. Delmas"
        />
    </body>
</BaseLayout>
